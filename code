import stanza

# Загрузка модели для английского языка
nlp = stanza.Pipeline('en')

def stanza_lemmatize(text):
    doc = nlp(text)
    lemmatized_tokens = [word.lemma for sent in doc.sentences for word in sent.words]
    return lemmatized_tokens

# Пример использования
text = "The children are playing with their toys and running around."
lemmatized_tokens = stanza_lemmatize(text)
print(lemmatized_tokens)
